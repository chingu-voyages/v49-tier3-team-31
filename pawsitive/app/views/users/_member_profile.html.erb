<section class="w-full flex flex-col justify-start overflow-y-scroll pt-5 px-4 bg-slate-300 h-[100vh]">
  <div class="sm:flex sm:w-[100%] gap-2">
    <div class="flex justify-between w-[100%] flex-col gap-2 sm:items-center h-full md:flex-row">
      <div class="flex gap-1 w-[100%] sm:w-[30%] justify-center item-center bg-white p-4">
        <div class="flex">
          <% if current_user.avatar.present? %>
            <%= image_tag(current_user.avatar, class: "w-[50px] h-[50px] rounded-full self-center", alt:'') %>
          <% end %>
        </div>
        <div class="flex flex-col p-2 gap-0.5">
          <p class="text-md font-medium">
            <span class="text-sm"><%= current_user.first_name %></span>
            <span class="text-sm"><%= current_user.last_name %></span>
          </p>
          <%= link_to 'Edit Profile', edit_user_registration_path, class: 'text-blue-500 hover:text-blue-700' %>
          <%= link_to "Create Your services", new_service_path, class: 'text-blue-500 hover:text-blue-700' %>
        </div>
      </div>
      <div class="bg-white w-[100%] flex flex-col flex-1 sm:flex-row h-auto justify-around p-4 sm:h-24 relative">
        <p class="bg-yellow-400 absolute top-[-10px] left-7 rounded-lg p-1 text-xs uppercase">Refer a friend, get $20</p>
        <div  class="w-[70%] self-center">
          <p class="text-pretty text-sm">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Necessitatibus non modi amet doloribus ipsam nulla corrupti nobis.</p>
        </div>
        <div class="w-[30%] flex justify-center items-center px-2">
          <button class="flex-1 rounded-full antialiased border capitalize" >Invite a friend</button>
        </div>
      </div>
    </div>
  </div>
  <div class="sm:flex sm:w-[100%] xs:w-[90%] gap-2 self-center mt-4">
    <div class="flex flex-col justify-center gap-2 items-center sm:w-[30%] h-full bg-white p-4">
      <div class="flex justify-between w-[100%] items-center">
        <div>
          <p>Wallet</p>
          <span class="text-blue-400 text-sm font-bold">Apply Promo Code</span>
        </div>
        <p>$0.00</p>
      </div>
      <div class="flex justify-between w-[100%] bg-slate-300 rounded-md p-1">
        <p>Upcomming Earnings</p>
        <p>$0.00</p>
      </div>
      <div class="flex justify-between w-[100%] bg-red-100 rounded-md p-1">
        <p>Processing Payments</p>
        <p>$0.00</p>
      </div>
      <div class="flex justify-between w-[100%]">
        <p class="text-xs">Funds from the past bookings begin processing 48 hours after they end</p>
      </div>
        <button class="rounded-full antialiased border capitalize w-[100%] text-sm" >manage payout methods</button>
        <button class="rounded-full antialiased border capitalize w-[100%] text-sm" >add or modify a payment method</button>
        <button class="rounded-full antialiased border capitalize w-[100%] text-sm" >view payment and promo code</button>
    </div>
    <div class="w-[70%] bg-white flex flex-col gap-2 h-auto p-4">
      <div class="flex flex-col justify-start">
        <h3 class="font-bold">Your Pets</h3>
        <p class="text-sm">Add your pets or edit their info</p>
      </div>
      <div class="h-[100%] w-[100%]">
        <div class="flex flex-col justify-center items-center h-[200px] w-[200px] border">
          <span>+</span>
          <span>Add a pet</span>
        </div>
      </div>
    </div>
  </div>
</section>