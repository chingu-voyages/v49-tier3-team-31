<section class="w-[50%] py-2 m-auto">
  <% if @services.present? %>
  <%= form_with(model: @booking, url: bookings_path(user_id: params[:user_id]), local: true, class: 'space-y-2') do |f| %>

  <% if @member.present? %>
    <h2 class="text-center">Contact <%= @member.first_name %></h2>
  <% else %>
    <h2 class="text-center">Contact Us</h2>
  <% end %>

    <div class="space-y-2">
      <%= f.label :service, "What Service are you interested in?", class: 'block text-sm font-medium text-gray-700' %>
      <%= f.collection_select :service_id, @services, :id, :service_type, { prompt: 'Select a service' }, { class: "mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md" }%>
    </div>

    <div class="flex gap-2">
      <div class="space-y-2 w-[50%]">
        <%= f.label :start_date, "Drop off Date", class: 'block text-sm font-medium text-gray-700' %>
        <%= f.date_field :start_date, class: 'mt-1 block flex-1 w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm' %>
      </div>
      
      <div class="space-y-2 w-[50%]">
        <%= f.label :start_date, "Pick up Date", class: 'block text-sm font-medium text-gray-700' %>
        <%= f.date_field :end_date, class: 'mt-1 block flex-1 w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm' %>
      </div>
    </div>
      
    <div class="flex gap-2">
      <div class="space-y-2 w-[50%]">
        <%= f.label :start_time, "Start Time", class: 'block text-sm font-medium text-gray-700' %>
        <%= f.time_field :start_time, class: 'mt-1 block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm' %>
      </div>
      
      <div class="space-y-2 w-[50%]">
        <%= f.label :end_time, "End Time", class: 'block text-sm font-medium text-gray-700' %>
        <%= f.time_field :end_time, class: 'mt-1 block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm' %>
      </div>
    </div>

    <h4>Add your pets</h4>
    <details class="w-[100%] border border-solid m-0">
      <summary class="text-sm font-medium text-gray-700 text-center m-0">Add Pets</summary>
      <div class="space-y-1">
        <%= f.label :num_of_pets, "Add Pets", class: 'hidden block text-sm font-medium text-gray-700 text-center' %>
        <%= f.number_field :num_of_pets, class: 'mt-1 block w-full py-2 px-3 border-none border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm', placeholder: 0 %>
      </div>
    </details>

    <h4>Add your phone number here</h4>
    <p class="text-xs text-pretty m-0">we need a verified number to add to your account we will not share it with members.</p>
    <details class="w-[100%] border border-solid m-0">
      <summary class="text-sm font-medium text-gray-700 mb-1 text-center">Phone Number</summary>
        <div class="space-y-1">
          <%= f.label :phone_number, "Phone Number", class: 'hidden block text-sm font-medium text-gray-700 text-center' %>
          <%= f.telephone_field :phone_number, class: 'mt-1 block w-full py-2 px-3 border-none border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm', placeholder: '1-888-225-5555' %>
        </div>
    </details>

    <div class="space-y-2">
      <%= f.label :message, "Message", class: 'block text-sm font-medium text-gray-700' %>
      <%= f.text_area :message, class: 'mt-1 block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm' %>
    </div>

    <div class="space-y-2 flex gap-2">
      <%= f.check_box :recieve_updates, class: 'h-4 w-4 text-indigo-600 border-gray-300 rounded' %>
      <%= f.label :recieve_updates, "Would you like to receive updates and photo", class: 'ml-2 block text-sm text-gray-900' %>
    </div>

    <div class="flex justify-center items-center">
      <%= f.submit "Submit", class: 'w-[25%] inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500' %>
    </div>
  <% end %>
  <% else %>
    <p>No services found.</p>
  <% end %>
</section>
