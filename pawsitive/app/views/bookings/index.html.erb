<div class="container mx-auto mt-8">
  <h1 class="text-2xl font-semibold mb-6">Your Bookings</h1>
  <div class="space-y-4">
    <% @bookings.each do |booking| %>
      <div class="p-4 border rounded-lg shadow-md">
        <h2 class="text-xl font-bold"><%= booking.service.service_type %></h2>
        <p class="text-gray-700">Number of pets: <%= booking.num_of_pets %></p>
        <p class="text-gray-700">Start Date: <%= booking.start_date %></p>
        <p class="text-gray-700">End Date: <%= booking.end_date %></p>
        <div class="mt-4">
          <%= link_to 'View Details', booking_path(booking), class: "text-blue-500 hover:text-blue-700" %>
          <%= link_to 'Edit', edit_booking_path(booking), class: "ml-4 text-blue-500 hover:text-blue-700" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
