<div class="container mx-auto px-4 mt-8">
  <h1 class="text-2xl md:text-3xl font-semibold mb-6 text-center md:text-left">Your Bookings</h1>
  <div class="space-y-4">
    <% @bookings.each do |booking| %>
      <div class="p-4 md:p-6 border rounded-lg shadow-md bg-white hover:bg-gray-50 transition duration-300">
        <h2 class="text-xl md:text-2xl font-bold mb-2"><%= booking.service.service_type %></h2>
        <p class="text-gray-700"><span class="font-semibold">Number of pets:</span> <%= booking.num_of_pets %></p>
        <p class="text-gray-700"><span class="font-semibold">Start Date:</span> <%= booking.start_date %></p>
        <p class="text-gray-700"><span class="font-semibold">End Date:</span> <%= booking.end_date %></p>
        <div class="mt-4 flex flex-col md:flex-row md:space-x-4">
          <%= link_to 'View Details', booking_path(booking), class: "text-blue-500 hover:text-blue-700 mb-2 md:mb-0" %>
          <%= link_to 'Edit', edit_booking_path(booking), class: "text-blue-500 hover:text-blue-700" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
