<%= form_with(model: [@service, @review], url: service_reviews_path(@service), method: :post, local: false, class: "max-w-md mx-auto mt-16 p-4 bg-white shadow rounded") do |form| %>
  <h2 class="text-2xl font-bold mb-4">Review Form</h2>
  <%= form.hidden_field :user_id, value: current_user.id %>
  <div class="mb-4 mx-auto">
    <%= form.label :rating, "Ratings" %>
    <div class="flex items-center space-x-2">
      <% (1..5).each do |rating| %>
        <div>
          <%= form.radio_button :rating, rating %>
          <%= form.label :rating, rating %>
        </div>
      <% end %>
    </div>
    <div class="mb-4">
      <%= form.label :comment, "Comments" %>
      <%= form.text_field :comment %>
    </div>
    <div class="mb-4">
      <%= form.submit "Submit" %>
    </div>
  <% end %>
