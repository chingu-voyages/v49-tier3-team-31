<div class="text-center mb-2 text-2xl font-bold tracking-tight text-gray-900">
  <%= form_with(model: [@service, @review], local: false) do |form| %>
    <h2 class="text-2xl font-bold mb-4">Service Review Form</h2>
    <div class="mb-4 mx-auto text-center">
      <%= form.label :rating, "Ratings" %>
      <div class="mt-2">
        <% (1..5).each do |rating| %>
          <%= form.radio_button :rating, rating %>
          <%= form.label :rating, rating %>
        <% end %>
      </div>
    </div>
    <div class="mr-14 mb-4">
      <%= form.label :comment, "Comments" %>
      <%= form.text_field :comment %>
    </div>
    <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
      <%= form.submit "Submit" %>
    </button>
  <% end %>
</div>
