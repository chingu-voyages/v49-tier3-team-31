<%= link_to service_path(service.id), target: :_blank do %>
  <div class="py-4 px-4 border-b border-l-4 border-l-transparent hover:border-l-blue-600">
    <div class="flex justify-between items-center">
      <div class="flex items-center">
        <div class="w-8 md:w-24 aspect-square overflow-hidden rounded-full">
          <%= image_tag(service.member.avatar, class: "aspect-square h-full w-full") %>
        </div>
        <div class="mx-4">
          <h2 class="text-2xl font-semibold"><%= service.member.display_name %></h2>
          <p class="truncate max-w-[18ch] md:max-w-[30ch]"><%= service.member.bio %></p>
          <p><%= service.member.city %></p>
        </div>
      </div>
      <div class="text-right">
        <p>from</p>
        <p class="text-blue-700 text-2xl font-bold">$<%= service.price["small_dog"] %></p>
        <p>per night</p>
      </div>
    </div>
    <p class="my-4"><%= service.description %></p>
  </div>
<% end %>
